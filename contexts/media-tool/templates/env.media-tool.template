# Git Iteration Manager - Media Tool Environment
# Iteration: {iterationName}
# Branch: {iterationBranch}
# Created: {createdDate}

# Database Configuration
DB_HOST=localhost
DB_PORT={dbPort}
DB_NAME={dbSchema}
DB_USER=postgres
DB_PASSWORD=postgres

# Service Ports
FRONTEND_PORT={frontendPort}
BACKEND_PORT={backendPort}

# Service URLs
FRONTEND_URL=http://localhost:{frontendPort}
BACKEND_URL=http://localhost:{backendPort}
VITE_BACKEND_URL=http://localhost:{backendPort}

# Environment
NODE_ENV=development
ITERATION_NAME={iterationName}
ITERATION_BRANCH={iterationBranch}

# Media Tool Specific
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token

# Beeswax Integration
BEESWAX_API_URL=https://sandbox.beeswax.com
BEESWAX_USERNAME=your_beeswax_username
BEESWAX_PASSWORD=your_beeswax_password

# Snowflake (if used)
SNOWFLAKE_ACCOUNT=your_snowflake_account
SNOWFLAKE_USERNAME=your_snowflake_username
SNOWFLAKE_PASSWORD=your_snowflake_password
SNOWFLAKE_DATABASE=MEDIA_TOOL
SNOWFLAKE_WAREHOUSE=ZEN_SMALL

# Optional: JWT secrets for local development
JWT_SECRET=local_development_secret_{iterationName}
COOKIE_SECRET=local_cookie_secret_{iterationName}